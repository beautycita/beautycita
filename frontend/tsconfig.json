{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Temporarily relaxed for Mazer integration */
    "strict": false,
    "noImplicitAny": false,                   /* Temporarily disabled */
    "strictNullChecks": false,                /* Temporarily disabled */
    "noImplicitReturns": false,               /* Temporarily disabled */
    "noUnusedLocals": false,                  /* Will enable after fixing imports */
    "noUnusedParameters": false,              /* Will enable after cleanup */
    "noFallthroughCasesInSwitch": false,      /* Temporarily disabled */

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}